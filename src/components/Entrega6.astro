---

import ps from "../assets/Entrega6/ps aux.png";
import top from "../assets/Entrega6/top.png";
import htop from "../assets/Entrega6/htop.png";
import pstree from "../assets/Entrega6/pstree -p.png";
import pgrep from "../assets/Entrega6/pgrep.png";

import kill from "../assets/Entrega6/kill.png";
import killall from "../assets/Entrega6/killall.png";
import pkill from "../assets/Entrega6/pkill.png";
import killTerminarProceso from "../assets/Entrega6/terminar proceso.png";
import killallTerminarProceso from "../assets/Entrega6/killall terminar procesos.png";
import pkillTerminarProceso from "../assets/Entrega6/pkill terminar proceso.png";

import nice from "../assets/Entrega6/nice.png";
import renice from "../assets/Entrega6/renice.png";

import procInfoProceso from "../assets/Entrega6/proc infoproceso.png";
import procInfoCPU from "../assets/Entrega6/proc cpuinfo.png";
import procInfoMem from "../assets/Entrega6/proc meminfo.png";

import estadosProcesos from "../assets/Entrega6/estados de los procesos.png";

import CardPaso from "../components/CardsPasos.astro";

const monitoreo = [
    { titulo: "ps aux", imagen: ps.src, descripcion: "Muestra información detallada de todos los procesos." },
    { titulo: "top", imagen: top.src, descripcion: "Monitor en tiempo real de CPU y memoria." },
    { titulo: "htop", imagen: htop.src, descripcion: "Versión mejorada de top con interfaz interactiva." },
    { titulo: "pstree -p", imagen: pstree.src, descripcion: "Muestra los procesos en forma de árbol." },
    { titulo: "pgrep", imagen: pgrep.src, descripcion: "Busca procesos por nombre y devuelve su PID." }
];

const gestion = [
    { titulo: "kill", imagen: kill.src, descripcion: "Envía señales a procesos por PID." },
    { titulo: "kill terminar proceso", imagen: killTerminarProceso.src, descripcion: "Uso de kill para forzar la terminación de un proceso.." },
    { titulo: "killall", imagen: killall.src, descripcion: "Finaliza procesos por nombre." },
    { titulo: "killall terminar proceso", imagen: killallTerminarProceso.src, descripcion: "Ejemplo de cómo killall elimina múltiples procesos." },
    { titulo: "pkill", imagen: pkill.src, descripcion: "Envía señales usando patrones." },
    { titulo: "pkill terminar proceso", imagen: pkillTerminarProceso.src, descripcion: "Ejemplo práctico del uso de pkill para finalizar procesos." }
];

const prioridades = [
    { titulo: "nice", imagen: nice.src, descripcion: "Ejecuta un proceso con prioridad modificada." },
    { titulo: "renice", imagen: renice.src, descripcion: "Cambia la prioridad de un proceso activo." }
];

const proc = [
    { titulo: "/proc – proceso", imagen: procInfoProceso.src, descripcion: "Información específica de un proceso." },
    { titulo: "/proc/cpuinfo", imagen: procInfoCPU.src, descripcion: "Información del procesador." },
    { titulo: "/proc/meminfo", imagen: procInfoMem.src, descripcion: "Estado actual de la memoria RAM." }
];

---

<div class="flex flex-col justify-center items-center gap-8 w-full bg-gray-950 pt-20 px-10" id="entrega6">

    <div class="text-center max-w-3xl">
        <h1 class="font-bold text-3xl text-heading mb-4">
            Entrega 3 actividad 3
        </h1>
        <p class="text-heading text-xl">
            Monitoreo, gestión, prioridades y estados de procesos en Linux.
        </p>
    </div>

    <section class="w-full">
        <h2 class="text-3xl font-bold text-heading text-center mb-6">
            PS, TOP, HTOP, PSTREE, PGREP
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
            {monitoreo.map(step => (
                    <CardPaso titulo={step.titulo} imagen={step.imagen} descripcion={step.descripcion} />
            ))}
        </div>
    </section>

        <h2 class="text-3xl font-bold text-heading text-center mb-6">
            Gestión de Procesos
        </h2>
        <div class="columns-1 sm:columns-2 lg:columns-3 gap-4">
            {gestion.map(step => (
                    <div class="mb-4 break-inside-avoid">
                        <CardPaso titulo={step.titulo} imagen={step.imagen} descripcion={step.descripcion} />
                    </div>
            ))}
        </div>

    <section class="w-full">
        <h2 class="text-3xl font-bold text-heading text-center mb-6">
            Prioridades
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
            {prioridades.map(step => (
                    <CardPaso titulo={step.titulo} imagen={step.imagen} descripcion={step.descripcion} />
            ))}
        </div>
    </section>

    <section class="w-full">
        <h2 class="text-3xl font-bold text-heading text-center mb-6">
            Archivos /proc
        </h2>
        <div class="flex flex-wrap justify-center gap-4">
            {proc.map(step => (
                    <CardPaso titulo={step.titulo} imagen={step.imagen} descripcion={step.descripcion} />
            ))}
        </div>
    </section>

    <section class="w-full flex flex-col items-center">
        <h2 class="text-3xl font-bold text-heading mb-6">
            Estados de los Procesos
        </h2>
        <CardPaso
                titulo="Estados de procesos en Linux"
                imagen={estadosProcesos.src}
                descripcion="Representa los diferentes estados posibles de un proceso."
        />
    </section>
    <a
            href="https://youtu.be/QcHdbPHP42Q"
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 text-white bg-red-600 hover:bg-red-700 font-medium rounded-lg shadow transition-all"
    >
        Video Evidencia
    </a>
</div>
