#!/bin/bash

#Elimina archivos temporales y la cache del sistema
echo "Eliminando archivos temporales..."
rm -rf /tmp/* 2>/dev/null
rm -rf ~/.cache/* 2>/dev/null

#Actualiza la lista de paquetes del sistema
echo "Actualizando listas de paquetes..."
sudo apt update -y

#Actualiza los paquetes instalados de los paquetes del sistema
echo "Actualizando paquetes instalados..."
sudo apt upgrade -y

#Elimina los paquetes que ya no son necesarios de apt
echo "Eliminando paquetes innecesarios..."
sudo apt autoremove -y

#Elimina la cache del apt
echo "Limpiando cach√© de apt..."
sudo apt autoclean -y
